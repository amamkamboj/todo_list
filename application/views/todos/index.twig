    <div id="container">
        <h1>My Task Board</h1>
        <?php form_open('', 'id="new_todo_form"') ?>
            <input type="text" id="new_todo" class="form-control" placeholder="Enter your todos!">
        </form>
        <ul id="todos" class="list-group">
