                    <label for="checkbox_{{ todo.id | e }}">
                        <span class="todo_title {% if todo.state is same as('1') %} {{ done }} {% endif %}">{{ todo.title | e }}</span>
                    </label>
                    <div class="delete_todo">x</div>
                </li>
            {% endfor %}
            <li id="todo_template" data-id="" class="list-group-item" style="">
                <input id="" type="checkbox" class="update_todo">
                <label for="">
                    <span class="todo_title"></span>
                </label>
                <div class="delete_todo">x</div>
            </li>
        </ul>
    </div>
